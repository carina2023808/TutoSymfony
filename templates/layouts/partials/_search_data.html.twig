{% if form %}
    {{ form_start(form, {'attr': {'class': 'my-4 d-flex justify-content-center'}}) }}
        <div class="input-group w-50">
            {{ form_widget(form.q, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Rechercher une recette...'
                }
            }) }}
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </div>
    {{ form_end(form) }}
{% endif %}
